			linkT = "http://formacion.ciens.ucv.ve/forminst?accion=listar informe"
			linkI = "http://formacion.ciens.ucv.ve/inicioinstructor/ver_detalles_adecuacion"
			remitente4 = Usuario.where(id: plan.instructor_id).take
			ActionCorreo.retraso_informe(remitente4, notific2.mensaje,linkI).deliver

			remitente3 = Usuario.where(id: plan.tutor_id).take
			ActionCorreo.retraso_informe(remitente3, notific.mensaje,linkT).deliver

			plan.mensaje = 8
			plan.save
		end
	end


	#FIN Enviar correo de notificacion de informes--------------------------------------------------------------------------
	puts "fin"
	sleep(1.day)
end