	#Aclualizar los estatus de los informes luego de haber pasado dos semana-----------------------------------------------
	estatus_informes = EstatusInforme.where(actual: 1).all
	fecha = Time.now.strftime("%Y-%m-%d")
	fecha2 = Time.now
