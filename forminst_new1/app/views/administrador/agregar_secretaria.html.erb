<div class = 'row'>
  <div class="col-xs-11 col-xs-offset-1 col-md-12 col-md-offset-0 text-center">
    <h5><strong>AGREGAR SECRETARIA</strong></h5>
  </div>
</div>

<form accept-charset="UTF-8" controller ="administrador" action="guardar_secretaria">
  <div class= "row">
    <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
        <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <tbody>
            <tr>
              <td class="text-left"></td>
            </tr>

            <tr>
              <td class="text-left"><h5><strong>1. Datos de la Secretaria</strong></h5></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class= "row">
    <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
        <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <tbody>

            <tr>
              <td style='width:50%;' class="text-center"><strong>Nombres</strong></td>
              <td style='width:50%;' class="text-center"><strong>Apellido</strong></td>
            </tr>

            <tr>
              <td class="text-center">
                <input type="text" name="Nombre" class="form-control" required oninvalid="setCustomValidity('Ingrese un nombre válido')" onchange="try{setCustomValidity('')}catch(e){}">
              </td>
              <td class="text-center">
                <input type="text" name="Apellido" class="form-control" required  oninvalid="setCustomValidity('Ingrese un apellido válido')" onchange="try{setCustomValidity('')}catch(e){}">
              </td>
            </tr>


            <tr>
              <td style='width:50%;' class="text-center"><strong>Cédula de Identidad</strong></td>
              <td style='width:50%;' class="text-center"><strong>Correo Electrónico</strong></td>
            </tr>

            <tr>
              <td class="text-center">
                <input type="number" name="CI" class="form-control" min="0" step="0" required oninvalid="setCustomValidity('Ingrese una cédula válida')" onchange="try{setCustomValidity('')}catch(e){}">
              </td>
              <td class="text-center">
                <div class="input-group">
                <input type="text" name="correo" class="form-control" equired oninvalid="setCustomValidity('Ingrese un correo electrónico válido')" onchange="try{setCustomValidity('')}catch(e){}"> 
                <div class="input-group-addon">@ciens.ucv.ve</div>
                </div>
              </td>
            </tr>

            <tr>
              <td style='width:50%;' class="text-center"><strong>Escuela a la que Pertenece</strong></td>
              <td style='width:50%;' class="text-center"><strong>Entidad a la que Pertenece</strong></td>
            </tr>

            <tr>
              <td class="text-center">
                <%= select_tag(:cptutores, options_for_select(@cpescuelas), {:class => "form-control", :name=> "jrescuelas", :style => "width:100%;" }) %>              </td>
              </td>
              <td class="text-center">
                <%= select_tag(:cptutores, options_for_select(@cpentidades), {:class => "form-control", :name=> "jrentidades", :style => "width:100%;" }) %>           </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<center><input name="commit" type="submit" class="btn btn-info btn-lg" value="Guardar" /></center>
</form>

