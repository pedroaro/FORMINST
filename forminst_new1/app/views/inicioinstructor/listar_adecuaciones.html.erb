<div class = 'row'>
	<div class="col-xs-12 col-md-12">
			<ul class="nav nav-tabs">
				<li><a href="../inicioinstructor/index">Inicio</a></li>
				<li><a href="../inicioinstructor/listar_adecuaciones" class = 'active'>Adecuación del Plan</a></li>
				<li><a href="../inicioinstructor/listar_informes">Informes</a></li>
				<li><a href="../inicioinstructor/prorrogas">Prorrogas</a></li>
				<li><a href="../inicioinstructor/logout">Cerrar Sesión</a></li>
			</ul>
	</div>
</div>

<div class = 'row'>
  <div class="col-xs-12 col-md-12">
    <%if flash[:mensaje]%>
      <div class="panel panel-warning">
        <div class="panel-body">
          <h5><b><%=flash[:mensaje]%></b></h5>
        </div>
      </div>
    <%end%>
  </div>
</div>

<div class="row">
	<div class="col-xs-12 col-md-12">
		<div class="text-right">
			<div id = "fechamuestra">
				<h3> <%= Time.now.strftime("%d") %>
          <% if Time.now.strftime("%m").to_i == 1 %>
            de enero del
          <% elsif Time.now.strftime("%m").to_i == 2 %>
            de febrero del
          <% elsif Time.now.strftime("%m").to_i == 3 %>
            de marzo del
          <% elsif Time.now.strftime("%m").to_i == 4 %>
            de abril del
          <% elsif Time.now.strftime("%m").to_i == 5 %>
            de mayo del
          <% elsif Time.now.strftime("%m").to_i == 6 %>
            de junio del
          <% elsif Time.now.strftime("%m").to_i == 7 %>
            de julio del
          <% elsif Time.now.strftime("%m").to_i == 8 %>
            de agosto del
          <% elsif Time.now.strftime("%m").to_i == 9 %>
            de septiembre del
          <% elsif Time.now.strftime("%m").to_i == 10 %>
            de octubre del
          <% elsif Time.now.strftime("%m").to_i == 11 %>
            de noviembre del
          <% elsif Time.now.strftime("%m").to_i == 12 %>
            de diciembre del
          <% end %>
          <%= Time.now.strftime("%Y") %> 
        </h3>
			</div>
			<%if @nombre%>
				<div>
					<h4><b><%=@nombre%></b></h4>
				</div>
			<%end%>
		</div>
	</div>
</div>

<% if @adecuacion %>
<div class = 'row'>
  <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
    <h1>Adecuación</h1>
    <p class="text-justify">Haga click en "Ver detalles" sobre su Adecuación que se desee visualizar los detalles de la misma</p>
    <div class="table-responsive">
      <table class="table table-hover table-bordered text-center">
        <thead>
          <tr>
            <th class="text-center">Fecha de Creación</th>
            <th class="text-center">Tutor</th>
            <th class="text-center">Estado</th>
            <th class="text-center">Fecha de Última Modificación</th>
            <th class="text-center">Detalles</th>
          </tr>
        </thead>


        <tbody>
          <tr>
            <td class = "text-center"><%= @adecuacion.fecha_creacion %></td>
            <td class = "text-center"><%= @tutor %></td>
            <td class="text-center"><%= @tipo_status %></td>
            <td class="text-center"><%= @adecuacion.fecha_modificacion %></td>
            <td class = "text-center">
              <%= form_tag({controller: 'inicioinstructor', action: 'ver_detalles_adecuacion'}) do%>
                <input type="hidden" name="adecuacion_id" value='<%= @adecuacion.id %>'>
                <button type="submit" class="btn btn-forminst-blue">Ver Detalles</button>
              <%end%>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% else %>
  <div class = 'row'>
    <div class="col-xs-12 col-md-12">
      <h3 class = 'text-center'>No hay Adecuacion</h3>
    </div>
  </div>
  <br>
<% end %>
<div class = 'row'>
  <div class = 'col-xs-12 col-md-12'>
    <center>
      <button type="button" class="btn btn-forminst" onclick = " location.href = '../inicioinstructor/index'">Volver</button>
    </center>
  </div>
</div>
</br>
</br>