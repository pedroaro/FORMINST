  <div class="col-xs-12 col-md-12">
      <ul class="nav nav-tabs">
        <li><a href="../inicioinstructor/index">Inicio</a></li>
        <li><a href="../inicioinstructor/index">Adecuación del Plan</span></a></li>
        <li><a href="../inicioinstructor/listar_informes">Informes</a></li>
        <li><a href="../inicioinstructor/prorrogas">Prorrogas</a></li>
        <li><a href="../inicioinstructor/logout">Cerrar Sesión</a></li>
      </ul>
  
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default" onclick = " location.href = 'javascript:history.back(-1);'">Volver</button>
      <%= link_to "Vista Previa", {controller: "inicioinstructor", action: "vista_previa"}, class: "btn btn-default" %>
      <%= link_to "Generar PDF", {controller: "adecuacions", action: "generar_pdf"},target: :_blank, class: "btn btn-default" %>
      <%= link_to "Ver Soportes", {controller: "inicioinstructor", action: "ver_soporte"}, class: "btn btn-default" %>
      <%= link_to "Versiones Anteriores", {controller: "inicioinstructor", action: "ver_respaldos"}, class: "btn btn-default" %>
    </div>
  </div>
</div>

<div class = 'row'>
  <div class="col-xs-12 col-md-12">
    <%if flash[:mensaje]%>
      <div class="panel panel-warning">
        <div class="panel-body">
          <h5><b><%=flash[:mensaje]%></b></h5>
        </div>
      </div>
    <%end%>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-12 col-md-offset-0">
    <div class="text-right">
      <div id = "fechamuestra">
        <h3> <%= Time.now.strftime("%d") %>
          <% if Time.now.strftime("%m").to_i == 1 %>
            de enero del
          <% elsif Time.now.strftime("%m").to_i == 2 %>
            de febrero del
          <% elsif Time.now.strftime("%m").to_i == 3 %>
            de marzo del
          <% elsif Time.now.strftime("%m").to_i == 4 %>
            de abril del
          <% elsif Time.now.strftime("%m").to_i == 5 %>
            de mayo del
          <% elsif Time.now.strftime("%m").to_i == 6 %>
            de junio del
          <% elsif Time.now.strftime("%m").to_i == 7 %>
            de julio del
          <% elsif Time.now.strftime("%m").to_i == 8 %>
            de agosto del
          <% elsif Time.now.strftime("%m").to_i == 9 %>
            de septiembre del
          <% elsif Time.now.strftime("%m").to_i == 10 %>
            de octubre del
          <% elsif Time.now.strftime("%m").to_i == 11 %>
            de noviembre del
          <% elsif Time.now.strftime("%m").to_i == 12 %>
            de diciembre del
          <% end %>
          <%= Time.now.strftime("%Y") %> 
        </h3> 
      </div>
      <%if session[:nombre_usuario]%>
        <div>
          <h4><b><%=session[:nombre_usuario]%></b></h4>
        </div>
      <%end%>
    </div>
  </div>
</div>


<%if @boolobs == 1 %>
  <div class = 'row'>
    <div class="col-xs-11 col-xs-offset-1 col-md-12 col-md-offset-0 text-justify">
      <h1 class="text-left">Observaciones de la actividad seleccionada</h1>
    </div>
  </div>

<%else%>
  <div class = 'row'>
    <div class="col-xs-11 col-xs-offset-1 col-md-12 col-md-offset-0 text-justify">
      <h1 class="text-left">No hay observaciones en la actividad seleccionada.</h1>
    </div>
  </div>
<%end%>

<div class= "row">
  <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <tbody>
   
         
          <% if @obs_inv != nil && @obs_inv != "" %>
            <tr>
                <td class="text-center"><strong>Comisión de investigación</strong></td>  
            </tr>
            <tr>
                <td class="text-left"><%= @obs_inv%></td>
            </tr>
          <%end%>
          <% if @obs_consejoT != nil && @obs_consejoT != "" %>
            <tr>
                <td class="text-center"><strong>Consejo técnico</strong></td>  
            </tr>
            <tr>
                <td class="text-left"><%= @obs_consejoT%></td>
            </tr>
          <%end%>
          <% if @obs_consejoE != nil && @obs_consejoE != "" %>
            <tr>
                <td class="text-center"><strong>Consejo de escuela</strong></td>  
            </tr>
            <tr>
                <td class="text-left"><%= @obs_consejoE%></td>
            </tr>
          <%end%>
          <% if @obs_consejoF != nil && @obs_consejoF != "" %>
            <tr>
                <td class="text-center"><strong>Consejo de facultad</strong></td>  
            </tr>
            <tr>
                <td class="text-left"><%= @obs_consejoF%></td>
            </tr>
          <%end%>
            
          
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="col-md-offset-5 col-xs-12 col-md-12">
    <div class="btn-group" role="group">
       <button style="margin-left: 30px; margin-bottom: 20px;" type="button" class="btn btn-default volverObs" onclick=" location.href = 'javascript:history.back(-1);'">Volver</button>
    </div>
</div>