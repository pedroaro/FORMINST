        <div>
          <h4><b><%=@nombre%></b></h4>
        </div>
      <%end%>
    </div>
  </div>
</div>
<div class = 'row'>
  <div class="col-xs-11 col-xs-offset-1 col-md-12 col-md-offset-0 text-center">
    <% if @ver=="si" %>
      <h3><strong>Información Instructor</strong></h3>
    <% else %>
      <h3><strong>Modificar Instructor</strong></h3>
    <% end %>
  </div>
</div>
