<h1>Listado de Documentos</h1>


<% if !@documents.blank? %>
  <div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
      <thead>
        <tr>
          <th class="text-center">Nombre del Archivo</th>
          <th class="text-center">Mostrar</th>
          <th class="text-center">Borrar</th>
        </tr>
      </thead>
      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <td class = "text-center"><%= document.filename %></td>
            <td class = "text-center" >
            	<form class="button_to" method="get" action="<%= '/documents/' + document.id.to_s + ' ' + document.filename%>">
            	<input type="submit" class="btn btn-info" value="Mostrar">
            	</form>
            </td>
            <% if (@bool_enviado == 0 && document.informe_id.to_s == session[:informe_id].to_s) %>
              <td class = "text-center"><%= button_to 'Borrar', document, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-danger" %></td>
            <% else %>
              <td class = "text-center" ><button class="btn btn-danger" disabled>Borrar</button></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <br></br>
  <%if session[:informe_id]%> 
    <h2 class="text-center">No hay documentos adjuntos a esta Actividad</h2>
  <%else %>
    <h2 class="text-center">No hay documentos adjuntos a esta Adecuación</h2>
  <%end%>
  <br></br>
<% end %>


<br>
  <% if @bool_enviado == 0 %>
    <%= link_to "Agregar Documento", {controller: "documents", action: "new"}, class: "btn btn-forminst" %>
  <% end %>

