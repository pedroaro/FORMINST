<script type="text/javascript">
  function buscarTutor(){
    var escuela = $('#id').val();
    $.ajax({
        url: "/secretarias/buscarTutor?escuela="+escuela+"",
        dataType: "JSON",
        timeout: 10000,
        beforeSend: function(){
           $("#respuesta").html("Cargando...");
        },
        error: function(){
           $("#respuesta").html("Error al intentar buscar el Tutor, por favor intente mas tarde.");
        },
        success: function(data){
          alert(data)

        }
    })
  }

