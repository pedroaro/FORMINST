  </div>
</div>

<div class= "row">
  <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
      <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <tbody>
          <tr>
            <td class="text-left"></td>
          </tr>
          <tr>
            <td class="text-left"><h5><strong>1. Datos del Tutor</strong></h5></td>
          </tr>
          <tr>
            <td class="text-center"><strong>Fecha del Concurso de Oposición</strong></td>
          </tr>
            <td class="text-center">
              <input type="FechaConcurso" name="FechaConcurso" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Apellidos y Nombres</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="apellidoYN" name="apellidoYN" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Cédula de Identidad</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="CI" name="CI" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Correo Electrónico</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="text" name="correo" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Teléfono Celular</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="Tlf" name="Tlf" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Otro Teléfono</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="OTlf" name="OTlf" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Escuela o Instituto</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <%= select_tag(:escuelas, options_for_select(@escuelas), {:onchange => "buscarTutor()", :class => "form-control", :style => "width:100%;" }) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<center><%= button_to 'Guardar', :controller => 'secretarias', :action => 'guarda_instructor' %></center>

