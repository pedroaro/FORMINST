<div class = 'row'>
  <div class="col-xs-11 col-xs-offset-1 col-md-12 col-md-offset-0 text-center">
    <h5><strong>AGREGAR TUTOR</strong></h5>
  </div>
</div>

<form accept-charset="UTF-8" controller ="secretarias" action="guarda_tutor">
<div class= "row">
  <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
      <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <tbody>
          <tr>
            <td class="text-left"></td>
          </tr>
          <tr>
            <td class="text-left"><h5><strong>1. Datos del Tutor</strong></h5></td>
          </tr>
          <tr>
            <td class="text-center"><strong>Nombres</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="Nombre" name="Nombre" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Apellido</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="Apellido" name="Apellido" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Cédula de Identidad</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="CI" name="CI" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Correo Electrónico</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="text" name="correo" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Teléfono Celular</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="Tlf" name="Tlf" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Otro Teléfono</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="OTlf" name="OTlf" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Fecha de Nacimiento</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="FechaNac" name="FechaNac" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Direccion</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="Dir" name="Dir" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Grado de instruccion</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="GradoI" name="GradoI" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Area</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="Area" name="Area" class="form-control" required>
            </td>
          </tr>
          <tr>
            <td class="text-center"><strong>Subarea</strong></td>
          </tr>
          <tr> 
            <td class="text-center">
              <input type="Subarea" name="Subarea" class="form-control" required>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<center><input name="commit" type="submit" value="Guardar" /></center>
</form>

