<div class = 'row'>
  <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0 text-justify">
    <h1 class="text-left">Lista de Adecuaciones</h1>
  </div>
</div>

<% if @adecuacion %>
<div class = 'row'>
  <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
    <p class="text-justify">Haga click en "Ver detalles" sobre la Adecuacion correspondientesdf en caso de que se desee visualizar los detalles de la misma</p>
    <div class="table-responsive">
      <table class="table table-hover table-bordered text-center">
        <thead>
          <tr>
            <th class="text-center">Fecha de Creación</th>
            <th class="text-center">Instructor</th>
            <th class="text-center">Estado</th>
            <th class="text-center">Fecha de Última Modificación</th>
            <th class="text-center">Detalles</th>
          </tr>
        </thead>


        <tbody>
          <% @adecuaciones.each_with_index do |adecuacion, i| %>
          <tr>
            <td class = "text-center"><%= adecuacion.fecha_creacion %></td>
            <td class = "text-center"><%= @name %></td>
            <td class="text-center"><%= @status[i]%></td>
            <td class="text-center"><%= adecuacion.fecha_modificacion %></td>
            <td class = "text-center">
              <%= form_tag({controller: 'iniciotutor', action: 'ver_detalles_adecuacion'}) do%>
                <input type="hidden" name="adecuacion_id" value='<%= adecuacion.id %>'>
                <button type="submit">Ver Detalles</button>
              <%end%>
            </td>
          </tr>
          
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% else %>
  <div class = 'row'>
    <div class="col-xs-12 col-md-12">
      <h3 class = 'text-center'>No hay Adecuaciones</h3>
    </div>
  </div>
  <br>
<% end %>
<div class = 'row'>
  <div class = 'col-xs-12 col-md-12'>
    <center>
      <!--button type="button" class="btn btn-forminst" onclick = " location.href = 'javascript:history.back(-1);'">Volver</button-->
      <button type="button" class="btn btn-forminst" onclick = " location.href = '../iniciotutor/ver_detalles_plan'">Volver</button>
    </center>
  </div>
</div>
</br>
