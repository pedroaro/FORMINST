<div class="row">
	<div class="col-xs-12 col-md-12">
		<div class="text-right">
			<div id = "fechamuestra">
				<script languaje="JavaScript">
					fecha();
				</script> 
			</div>
			<%if session[:nombre_usuario]%>
				<div>
					<h4><b><%=session[:nombre_usuario]%></b></h4>
				</div>
			<%end%>
			<p>Tutor</p>
		</div>
