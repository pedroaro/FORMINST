</div>
<div class="row">
	<div class = 'col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0 text-justify'>
		<h1 class = 'text-left'>Notificaciones:</h1>
	</div>
</div>

<% if @notificaciones1 %>
  <div class = 'row'>
    <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
	    <div class="table-responsive">
	      <table class="table table-hover table-bordered text-center">
	        <thead>
	          <tr>
	            <th class="text-center">Notificaciones</th>
	            <th class="text-center" style='width:10%;'>Acción</th>
	          </tr>
	        </thead>
	        <tbody>
	          <% @notificaciones1.each_with_index do |notificaciones1| %> 
				<%= form_tag({controller: 'iniciotutor', action: 'borrar_notificaciones'}) do%>
				<input id="noti" type="hidden" name="noti" value='<%= notificaciones1.id %>'/>
	            <tr>
	              <td class="text-left"><%= notificaciones1.mensaje %></td>
	              <td><button type="submit" class="glyphicon glyphicon-trash" aria-hidden="true"></button></td>
	            </tr>
	        	<% end %>
	          <% end %>
	        </tbody>
	      </table>
	    </div>
    </div>
  </div>
<% else %>
      <h1>Usted no posee ninguna Notificación</h1>
<% end %>